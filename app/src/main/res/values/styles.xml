<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Original application theme. -->
    <style name="OriginalAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorOriginalPrimary</item>
        <item name="colorPrimaryDark">@color/colorOriginalPrimaryDark</item>
        <item name="colorAccent">@color/colorOriginalAccent</item>
    </style>

    <style name="AppTheme.Launch">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
